<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 이미지 영역 -->
    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 책 이미지 -->
        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- 편집 아이콘 -->
        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/edit_draw"
            android:visibility="visible" />
    </FrameLayout>

    <!-- 제목 -->
    <TextView
        android:id="@+id/bookTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/bookTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목 수정"
        android:visibility="gone"
        android:background="@android:drawable/editbox_background" />

    <!-- 저자 -->
    <TextView
        android:id="@+id/bookAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저자: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/bookAuthorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="저자 수정"
        android:visibility="gone"
        android:background="@android:drawable/editbox_background" />

    <!-- 감상평 -->
    <TextView
        android:id="@+id/bookReviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 감상평"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/bookReviewEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="감상평 입력"
        android:visibility="gone"
        android:background="@android:drawable/editbox_background"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:lines="3"
        android:minLines="3"
        android:scrollHorizontally="false" />

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/editButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수정"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="닫기" />
    </LinearLayout>
</LinearLayout>

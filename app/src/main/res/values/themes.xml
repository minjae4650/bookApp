<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 기본 테마 정의 -->
    <style name="Theme.BookApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 기본 색상 -->
        <item name="colorPrimary">@color/pastel_blue_primary</item>
        <item name="colorPrimaryDark">@color/pastel_blue_dark</item>
        <item name="colorAccent">@color/pastel_blue_accent</item>
        <!-- 상태바 및 내비게이션바 설정 -->
        <item name="android:statusBarColor">@color/pastel_blue_primary</item>
        <item name="android:navigationBarColor">@color/pastel_blue_primary</item>
    </style>

    <!-- 요일 텍스트 스타일 -->
    <style name="CalendarWeekDayStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
